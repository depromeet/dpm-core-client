{
	"name": "dpm-core-monorepo",
	"private": true,
	"scripts": {
		"dev": "turbo dev",
		"setup": "scripts/local-server-setup.sh",
		"dev:client": "turbo dev --filter client",
		"dev:admin": "turbo dev --filter admin",
		"build": "turbo build",
		"build:client": "turbo build --filter client",
		"build:admin": "turbo build --filter admin",
		"start": "turbo start",
		"format": "turbo format",
		"lint": "turbo lint",
		"check-types": "turbo check-types",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"clean": "turbo clean && rm -rf node_modules && rm -rf .turbo",
		"changeset": "changeset",
		"changeset:version": "changeset version",
		"changeset:publish": "changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@changesets/cli": "^2.29.5",
		"turbo": "^2.3.5"
	},
	"packageManager": "pnpm@8.15.6",
	"engines": {
		"node": ">=18"
	}
}
