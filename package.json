{
	"name": "dpm-core-monorepo",
	"private": true,
	"scripts": {
		"dev": "turbo dev",
		"setup": "scripts/local-server-setup.sh",
		"setup:windows": "powershell -File scripts/local-server-setup.ps1",
		"dev:client": "turbo dev --filter client",
		"dev:admin": "turbo dev --filter admin",
		"dev:native": "pnpm --filter @dpm-core/native start",
		"native:android": "pnpm --filter @dpm-core/native android",
		"native:ios": "pnpm --filter @dpm-core/native ios",
		"native:web": "pnpm --filter @dpm-core/native web",
		"build": "turbo build",
		"build:client": "turbo build --filter client",
		"build:admin": "turbo build --filter admin",
		"build:native": "turbo build --filter @dpm-core/native",
		"start": "turbo start",
		"format": "turbo format",
		"lint": "turbo lint",
		"check-types": "turbo check-types",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"clean": "turbo clean && rm -rf node_modules && rm -rf .turbo",
		"changeset": "changeset",
		"changeset:version": "changeset version",
		"changeset:publish": "changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@changesets/cli": "^2.29.5",
		"turbo": "^2.3.5"
	},
	"packageManager": "pnpm@10.27.0",
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@tiptap/core": "^3.18.0",
		"@tiptap/extension-heading": "^3.18.0"
	}
}
