{
	"name": "@dpm-core/shared",
	"version": "0.1.0",
	"description": "DPM Core shared components and utilities",
	"exports": {
		".": "./src/index.ts",
		"./theme-styles.css": "./src/theme-styles.css",
		"./shared-styles.css": "./dist/index.css"
	},
	"scripts": {
		"build:styles": "tailwindcss -i ./src/shared-styles.css -o ./dist/index.css",
		"dev:styles": "tailwindcss -i ./src/shared-styles.css -o ./dist/index.css --watch",
		"format": "biome format --write .",
		"lint": "biome lint --write ."
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@radix-ui/react-avatar": "^1.1.10",
		"@radix-ui/react-popover": "^1.1.14",
		"@radix-ui/react-slot": "^1.2.3",
		"dayjs": "^1.11.13",
		"input-otp": "^1.4.2",
		"lucide-react": "^0.514.0",
		"motion": "^12.23.0",
		"vaul": "^1.1.2"
	},
	"devDependencies": {
		"@tailwindcss/cli": "^4.1.5",
		"@tailwindcss/postcss": "^4.1.5",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4",
		"tw-animate-css": "^1.3.4",
		"typescript": "^5"
	},
	"peerDependencies": {
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	}
}
