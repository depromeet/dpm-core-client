{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env", ".env.*"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"start": {
			"dependsOn": ["build"],
			"cache": false,
			"persistent": true
		},
		"format": {},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"//#lint-and-format": {},
		"//#lint-and-format:fix": {
			"cache": false
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"clean": {
			"cache": false
		},
		"dev": {
			"dependsOn": ["^dev"],
			"cache": false,
			"persistent": true
		}
	},
	"globalDependencies": ["package.json", "yarn.lock", "turbo.json", "tsconfig.base.json"],
	"globalEnv": ["NEXT_PUBLIC_STAGE"]
}
