{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["^build"]
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**", "!dist/**/*.map"],
			"inputs": [
				"src/**",
				"app/**",
				"components/**",
				"lib/**",
				"types/**",
				"constants/**",
				"hooks/**",
				"providers/**",
				"remotes/**",
				"assets/**",
				"package.json",
				"tsconfig.json",
				"next.config.ts",
				"tailwind.config.*"
			]
		},
		"start": {
			"dependsOn": ["build"],
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"format": {
			"dependsOn": ["^build"]
		},
		"clean": {
			"cache": false
		},
		"type-check": {
			"dependsOn": ["^build"],
			"outputs": []
		}
	},
	"globalDependencies": ["package.json", "yarn.lock", "turbo.json", "tsconfig.base.json"]
}
